# KnowledgeOps Agent - Enterprise Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask application settings
FLASK_ENV=production
FLASK_DEBUG=false
PORT=5000

# Auto-sync interval in seconds (3600 = 1 hour, 0 = disabled)
AUTO_SYNC_INTERVAL=3600

# =============================================================================
# CONFLUENCE INTEGRATION
# =============================================================================

# Enable/disable Confluence integration
CONFLUENCE_ENABLED=true

# Confluence server URL (Cloud or Server/Data Center)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net

# Authentication method: api_token, oauth2, or saml
CONFLUENCE_AUTH_TYPE=api_token

# API Token authentication (recommended for Cloud)
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your-api-token

# OAuth2 authentication (for Cloud with app integration)
CONFLUENCE_CLIENT_ID=your-oauth-client-id
CONFLUENCE_CLIENT_SECRET=your-oauth-client-secret

# Spaces to sync (comma-separated, leave empty for all accessible spaces)
CONFLUENCE_SPACES=ENG,DOCS,PROD,SUPPORT

# Maximum results per API call
CONFLUENCE_MAX_RESULTS=100

# =============================================================================
# SHAREPOINT INTEGRATION
# =============================================================================

# Enable/disable SharePoint integration
SHAREPOINT_ENABLED=true

# Azure AD tenant configuration
SHAREPOINT_TENANT_ID=your-tenant-id
SHAREPOINT_CLIENT_ID=your-app-client-id
SHAREPOINT_CLIENT_SECRET=your-app-client-secret

# SharePoint sites to sync (comma-separated URLs, leave empty for discovery)
SHAREPOINT_SITES=https://company.sharepoint.com/sites/engineering,https://company.sharepoint.com/sites/documentation

# Maximum results per API call
SHAREPOINT_MAX_RESULTS=100

# =============================================================================
# SEARCH AND AI CONFIGURATION
# =============================================================================

# Embedding model for semantic search
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector search configuration
VECTOR_SEARCH_ENABLED=true
KEYWORD_SEARCH_ENABLED=true

# Cache directory for search indices
CACHE_DIRECTORY=./knowledge_cache

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for Flask sessions (generate a secure random key)
SECRET_KEY=your-secret-key-here

# CORS origins (comma-separated, * for all)
CORS_ORIGINS=*

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# DATABASE CONFIGURATION (Optional - for advanced deployments)
# =============================================================================

# Database URL for persistent storage (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/knowledgeops

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# Prometheus metrics endpoint
METRICS_ENABLED=true

# Health check configuration
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Number of worker processes for Gunicorn
WORKERS=4

# Worker timeout in seconds
WORKER_TIMEOUT=120

# Maximum requests per worker before restart
MAX_REQUESTS=1000

# Bind address for Gunicorn
BIND_ADDRESS=0.0.0.0:5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable content versioning
CONTENT_VERSIONING=true

# Enable audit logging
AUDIT_LOGGING=true

# Enable user analytics
USER_ANALYTICS=false

# =============================================================================
# INTEGRATION SPECIFIC SETTINGS
# =============================================================================

# Confluence specific settings
CONFLUENCE_TIMEOUT=30
CONFLUENCE_RETRY_ATTEMPTS=3
CONFLUENCE_RATE_LIMIT=1000

# SharePoint specific settings
SHAREPOINT_TIMEOUT=30
SHAREPOINT_RETRY_ATTEMPTS=3
SHAREPOINT_RATE_LIMIT=2000

# Supported file types for SharePoint (comma-separated)
SHAREPOINT_SUPPORTED_TYPES=docx,doc,xlsx,xls,pptx,ppt,pdf,txt,html,htm,md

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom SSL certificate paths (for on-premises deployments)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Proxy configuration (if required)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.company.com

# Custom CA bundle path
# REQUESTS_CA_BUNDLE=/path/to/ca-bundle.crt

# =============================================================================
# DEVELOPMENT SETTINGS (Remove in production)
# =============================================================================

# Enable development mode
# DEV_MODE=false

# Mock data for testing
# USE_MOCK_DATA=false

# Debug API responses
# DEBUG_API_RESPONSES=false

