# Environment Variables for NAVO
# Copy this file to .env and fill in your actual values

# T-Mobile Enterprise GPT Configuration
TMOBILE_ENTERPRISE_GPT_API_KEY=your_tmobile_enterprise_gpt_api_key_here
TMOBILE_ORGANIZATION_ID=your_tmobile_organization_id_here

# T-Mobile Confluence Integration
CONFLUENCE_BASE_URL=https://tmobile.atlassian.net
CONFLUENCE_USERNAME=your_service_account_username
CONFLUENCE_API_TOKEN=your_confluence_api_token

# T-Mobile SharePoint Integration (Microsoft Graph API)
SHAREPOINT_TENANT_ID=your_tmobile_azure_tenant_id
SHAREPOINT_CLIENT_ID=your_azure_app_client_id
SHAREPOINT_CLIENT_SECRET=your_azure_app_client_secret

# Redis Cache
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET=your_jwt_secret_key_change_in_production

# Optional: Microsoft OAuth (if using authentication)
MICROSOFT_CLIENT_ID=your_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_oauth_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# T-Mobile Specific Configuration
TMOBILE_DOMAIN=tmobile.com
TMOBILE_TEAMS_WEBHOOK_URL=your_teams_webhook_url_for_notifications

# Development Settings
DEBUG=false
ENVIRONMENT=production

# Feature Flags
ENABLE_TEAMS_INTEGRATION=true
ENABLE_FRESHNESS_TRACKING=true
ENABLE_CONTENT_FLAGS=true
ENABLE_SPRINT_CONTEXT=true

