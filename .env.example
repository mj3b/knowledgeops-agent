# Copy this file to .env and fill in your actual values

# Enterprise GPT Configuration
ENTERPRISE_GPT_API_KEY=your_enterprise_gpt_api_key_here
ENTERPRISE_ORGANIZATION_ID=your_enterprise_organization_id_here

# Confluence Integration
CONFLUENCE_BASE_URL=https://yourcompany.atlassian.net
CONFLUENCE_USERNAME=your_service_account_username
CONFLUENCE_API_TOKEN=your_confluence_api_token

# SharePoint Integration (Microsoft Graph API)
SHAREPOINT_TENANT_ID=your_azure_tenant_id
SHAREPOINT_CLIENT_ID=your_azure_app_client_id
SHAREPOINT_CLIENT_SECRET=your_azure_app_client_secret

# Redis Cache
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET=your_jwt_secret_key_change_in_production

# Optional: Microsoft OAuth (if using authentication)
MICROSOFT_CLIENT_ID=your_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_oauth_client_secret

